@{
    Layout = "_Layout";
}
@model LecturePublicViewModel
<h1>Lecture</h1>
<ul>
    <li>Identifiant : @Model.Livre.Identifiant</li>
    <li>Nombre de pages : @Model.Livre.NombrePages</li>
    <li>Titre : @Model.Livre.Titre</li>
    <li>Edition : @Model.Livre.Edition</li>
    <li>ISBN : @Model.Livre.Isbn</li>
    <li>Date d'édition : @Model.Livre.DateEdition</li>
    <li>Date de lecture : @Model.Livre.DateLecture</li>
    <li>Note : @Model.Livre.Note</li>
    <li>Resume : @Model.Livre.Resume</li>

</ul>
@foreach (Commentaire c in Model.Commentaires)
{
    <ul>
        Commentaire
        <p>Pseudo : @c.Pseudo</p>
        <p>Commentaire :@c.Commentaire1</p>
    </ul>

}

<a class="btn btn-success" asp-action="CommentaireView" asp-route-id="@Model.Commentaire.IdentifiantLivre">Commentaire</a>

